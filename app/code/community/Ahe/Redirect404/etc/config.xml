<config>
    <modules>
        <Ahe_Redirect404>
            <version>0.1.0</version>
        </Ahe_Redirect404>
    </modules>
    <global>
        <blocks>
            <aheredirect404>
                <class>Ahe_Redirect404_Block</class>
            </aheredirect404> 
        </blocks>
        <models>
           <aheredirect404>
               <class>Ahe_Redirect404_Model</class>
            </aheredirect404>
        </models>
        <helpers>
            <aheredirect404>
                <class>Ahe_Redirect404_Helper</class>
            </aheredirect404>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_postdispatch_cms_index_noRoute>
                <observers>
                    <aheredirect404_no_route>
                        <type>singleton</type>
                        <class>aheredirect404/observer</class>
                        <method>noRoute</method>
                    </aheredirect404_no_route>
                </observers>
            </controller_action_postdispatch_cms_index_noRoute>
        </events>
    </frontend>
    <default>
        <aheredirect404>
        </aheredirect404>
    </default>
</config>